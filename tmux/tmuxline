# This tmux statusbar config was created by tmuxline.vim
# on Mon, 16 Mar 2020

set -g status-justify "left"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=colour7,bg=colour11"
set -g status-right-style "none"
set -g pane-active-border-style "fg=colour14"
set -g status-style "none,bg=colour0"
set -g message-style "fg=colour7,bg=colour11"
set -g pane-border-style "fg=colour11"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "none,fg=colour14,bg=colour0"
setw -g window-status-separator ""
setw -g window-status-style "none,fg=colour10,bg=colour0"
set -g status-left "#[fg=colour15,bg=colour7,bold] #S:#I #[fg=colour7,bg=colour0,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=colour0,bg=colour0,nobold,nounderscore,noitalics]#[fg=colour10,bg=colour0] #(tmux-battery)  #(tmux-mem-cpu-load -m 2 -t 0 -a 0 -g 0 --interval 2 )  #{network_speed} #[fg=colour8,bg=colour0,nobold,nounderscore,noitalics]#[fg=colour15,bg=colour8] %a  %Y-%m-%d  %l:%M%p #[fg=colour7,bg=colour8,nobold,nounderscore,noitalics]#[fg=colour15,bg=colour7] #(getipfortmux || echo raspi) "
setw -g window-status-format "#[fg=colour0,bg=colour0,nobold,nounderscore,noitalics]#[default] #I  #W #[fg=colour0,bg=colour0,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=colour0,bg=colour8,nobold,nounderscore,noitalics]#[fg=colour15,bg=colour8] #I  #W #[fg=colour8,bg=colour0,nobold,nounderscore,noitalics]"
